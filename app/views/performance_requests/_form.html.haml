= form_for @performance_request do |f|
  - if @performance_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@performance_request.errors.count, "error")} prohibited this performance_request from being saved:"
      %ul
        - @performance_request.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label 'required', class: 'required'

  .field
    = f.label :first_name, 'First Name', class: 'required'
    = f.text_field :first_name
  .field
    = f.label :last_name,  'Last Name', class: 'required'
    = f.text_field :last_name
  .field
    = f.label :email , class: 'required'
    = f.text_field :email
  .field
    = f.label :organization, 'Performance For'
    = f.text_field :organization
  .field
    = f.label :date , 'Date and Time of Performance', class: 'required'
    = f.datetime_select :date, :minute_step => 15, :ampm => true
  .field
    = f.label :location , class: 'required'
    = f.text_field :location
  .field
    = f.label :kind , 'Type of Performance', class: 'required'
    = f.select :kind, ['','Private','Public']
  .field
    = f.label :dress, 'Type of Atire', class: 'required'
    = f.select :dress, ['','Formal','Casual']
  .field
    = f.label :description, 'Why Aggie Wranglers?' , class: 'required'
    = f.text_area :description
  .actions
    = f.submit 'Submit'
