  %b First name:
  = @performance_request.first_name
%p
  %b Last name:
  = @performance_request.last_name
%p
  %b Email:
  = @performance_request.email
%p
  %b Organization:
  = @performance_request.organization
%p
  %b Date:
  = @performance_request.date
%p
  %b Location:
  = @performance_request.location
%p
  %b Line 1:
  = @performance_request.address.line_1
%p
  %b Line 2:
  = @performance_request.address.line_2
%p
  %b City:
  = @performance_request.address.city
%p
  %b State:
  = @performance_request.address.state
