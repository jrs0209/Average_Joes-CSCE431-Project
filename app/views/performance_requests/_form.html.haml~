= form_for(setup_request ( @performance_request)) do |f|
  - if @performance_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@performance_request.errors.count, "error")} prohibited this performance_request from being saved:"
      %ul
        - @performance_request.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label 'Optional', class: 'optional'

  .field
    = f.label :first_name, 'First Name'
    = f.text_field :first_name
  .field
    = f.label :last_name,  'Last Name'
    = f.text_field :last_name
  .field
    = f.label :email 
    = f.text_field :email
  .field
    = f.label :organization, 'Performance For', class: 'optional'
    = f.text_field :organization
  .field
    = f.label :date , 'Date and Time of Performance'
    = f.datetime_select :date
  .field
    = f.label :location 
    = f.text_field :location
  = f.fields_for :address do |ff|
    .field
      = ff.label :line_1, 'Address Line 1'
      = ff.text_field :line_1
    .field
      = ff.label :line_2, 'Address Line 2', class: 'optional'
      = ff.text_field :line_2
    .field
      = ff.label :city, 'City'
      = ff.text_field :city
    .field
      = ff.label :state, 'State'
      = ff.text_field :state
    .field
      = ff.label :zip, 'Zip/Postal Code'
      = ff.text_field :zip     

  .field
    = f.label :kind , 'Type of Performance'
    = f.select :kind, ['','Private','Public']
  .field
    = f.label :dress, 'Type of Atire'
    = f.select :dress, ['','Formal','Casual']
  .field
    = f.label :description, 'Why Aggie Wranglers?' 
    = f.text_area :description
  .actions
    = f.submit 'Submit'
