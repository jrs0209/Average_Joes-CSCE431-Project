= form_for @request do |f|
  - if @request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@request.errors.count, "error")} prohibited this request from being saved:"
      %ul
        - @request.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :class
    = f.text_field :class
  .field
    = f.label :major
    = f.text_field :major
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
